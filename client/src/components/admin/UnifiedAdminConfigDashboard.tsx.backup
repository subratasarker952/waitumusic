                    </div>
                    <div>
                      <Label>Card Border Radius: {config.ui?.layout?.borderRadius || 8}px</Label>
                      <Slider
                        value={[config.ui?.layout?.borderRadius || 8]}
                        onValueChange={([value]) => updateConfigValue('ui.layout.borderRadius', value)}
